# SIGAIA Backend Environment Variables

# Application
APP_NAME=SIGAIA
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql+asyncpg://sigaia:sigaia_password@localhost:5432/sigaia_db
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Email (optional for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@sigaia.edu
EMAILS_FROM_NAME=SIGAIA

# Storage
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./storage
# For S3/MinIO:
# S3_ENDPOINT_URL=http://localhost:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
# S3_BUCKET_NAME=sigaia-documents

# ML Models
ML_MODELS_PATH=./ml_models
EMBEDDING_MODEL_NAME=paraphrase-multilingual-MiniLM-L12-v2

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
